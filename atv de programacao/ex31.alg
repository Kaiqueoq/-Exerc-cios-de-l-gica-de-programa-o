algoritmo "semnome"
// Função :: Ler três números inteiros e exibi-los em ordem crescente, determinando a sequência correta por meio de comparações entre os valores.
// Autor :kaique
// Data : 16/10/2025
// Seção de Declarações 
var
num1, num2, num3: inteiro
ordena: vetor[1..3] de inteiro

inicio
// Seção de Comandos
escreva("Digite o primeiro número: ")
leia(num1)
escreva("Digite o segundo número: ")
leia(num2)
escreva("Digite o terceiro número: ")
leia(num3)

se num1 > num2 entao
    ordena[3] <- num1
    ordena[2] <- num2
    se num3 > num1 entao
        ordena[3] <- num3
        ordena[2] <- num1
        ordena[1] <- num2
    senao
        se num3 > num2 entao
            ordena[3] <- num1
            ordena[2] <- num3
            ordena[1] <- num2
        senao
            ordena[3] <- num1
            ordena[2] <- num2
            ordena[1] <- num3
        fimse
    fimse
senao
    ordena[3] <- num2
    ordena[2] <- num1
    se num3 > num2 entao
        ordena[3] <- num3
        ordena[2] <- num2
        ordena[1] <- num1
    senao
        se num3 > num1 entao
            ordena[3] <- num2
            ordena[2] <- num3
            ordena[1] <- num1
        senao
            ordena[3] <- num2
            ordena[2] <- num1
            ordena[1] <- num3
        fimse
    fimse
fimse

escreval("Os números em ordem crescente são: ")
escreval(">",ordena[1])
escreval(">",ordena[2])
escreval(">",ordena[3])
fimalgoritmo


